<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <?define ProductName = "DIS Verification GenAI" ?>
  <?define ProductShortName = "dis-verification-genai" ?>
  <?define ProductVersion = "VERSION_PLACEHOLDER" ?>
  <?define Manufacturer = "Your Organization" ?>
  <?define UpgradeCode = "34c3ed39-12a4-44d1-b571-74e406f9beb1" ?>

  <Product Id="*"
           Name="$(var.ProductName)"
           Language="1033"
           Version="$(var.ProductVersion)"
           Manufacturer="$(var.Manufacturer)"
           UpgradeCode="$(var.UpgradeCode)">

    <Package InstallerVersion="500"
             Compressed="yes"
             InstallScope="perMachine"
             Description="$(var.ProductName) Installer"
             Comments="AI-powered verification and test plan generation system"
             Manufacturer="$(var.Manufacturer)"
             Platform="x64" />

    <!-- Upgrade logic -->
    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />

    <MediaTemplate EmbedCab="yes" />

    <!-- Properties -->
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />
    <Property Id="ARPHELPLINK" Value="https://github.com/martinmanuel9/dis_verification_genai" />
    <Property Id="ARPURLINFOABOUT" Value="https://github.com/martinmanuel9/dis_verification_genai" />

    <!-- Property for post-install script -->
    <Property Id="POWERSHELLEXE">
      <RegistrySearch Id="POWERSHELLEXE"
                      Type="raw"
                      Root="HKLM"
                      Key="SOFTWARE\Microsoft\PowerShell\1\ShellIds\Microsoft.PowerShell"
                      Name="Path" />
    </Property>

    <!-- Custom action to run post-install script -->
    <CustomAction Id="RunPostInstall"
                  Property="POWERSHELLEXE"
                  ExeCommand='-NoProfile -ExecutionPolicy Bypass -File "[INSTALLFOLDER]scripts\post-install.ps1" -InstallDir "[INSTALLFOLDER]"'
                  Execute="deferred"
                  Impersonate="yes"
                  Return="check" />

    <InstallExecuteSequence>
      <Custom Action="RunPostInstall" After="InstallFinalize">NOT Installed</Custom>
    </InstallExecuteSequence>

    <!-- Feature definition -->
    <Feature Id="ProductFeature" Title="DIS Verification GenAI" Level="1">
      <ComponentGroupRef Id="ApplicationFiles" />
      <ComponentGroupRef Id="ShortcutComponents" />
    </Feature>

    <!-- UI -->
    <UIRef Id="WixUI_InstallDir" />
    <UIRef Id="WixUI_ErrorProgressText" />

  </Product>

  <!-- Directory structure -->
  <Fragment>
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFiles64Folder">
        <Directory Id="INSTALLFOLDER" Name="DIS Verification GenAI" />
      </Directory>
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="DIS Verification GenAI"/>
      </Directory>
      <Directory Id="DesktopFolder" Name="Desktop" />
    </Directory>
  </Fragment>

  <!-- Shortcut Components -->
  <Fragment>
    <ComponentGroup Id="ShortcutComponents">
      <!-- Start Menu Shortcut -->
      <Component Id="ApplicationShortcut" Directory="ApplicationProgramsFolder" Guid="C1D2E3F4-A5B6-4C7D-8E9F-0A1B2C3D4E5F">
        <Shortcut Id="ApplicationStartMenuShortcut"
                  Name="DIS Verification GenAI"
                  Description="Launch DIS Verification GenAI Web Interface"
                  Target="[System64Folder]cmd.exe"
                  Arguments='/k "cd /d &quot;[INSTALLFOLDER]&quot; &amp;&amp; docker compose up -d &amp;&amp; start http://localhost:8501"'
                  WorkingDirectory="INSTALLFOLDER" />

        <Shortcut Id="ConfigurationShortcut"
                  Name="Configure Environment"
                  Description="Configure DIS Verification GenAI environment variables"
                  Target="[System64Folder]WindowsPowerShell\v1.0\powershell.exe"
                  Arguments='-NoProfile -ExecutionPolicy Bypass -File &quot;[INSTALLFOLDER]scripts\setup-env.ps1&quot; -InstallDir &quot;[INSTALLFOLDER]&quot;'
                  WorkingDirectory="INSTALLFOLDER" />

        <Shortcut Id="StopServiceShortcut"
                  Name="Stop Services"
                  Description="Stop DIS Verification GenAI services"
                  Target="[System64Folder]cmd.exe"
                  Arguments='/k "cd /d &quot;[INSTALLFOLDER]&quot; &amp;&amp; docker compose down"'
                  WorkingDirectory="INSTALLFOLDER" />

        <RemoveFolder Id="CleanUpShortCut" Directory="ApplicationProgramsFolder" On="uninstall"/>
        <RegistryValue Root="HKCU"
                       Key="Software\[Manufacturer]\[ProductName]"
                       Name="installed"
                       Type="integer"
                       Value="1"
                       KeyPath="yes"/>
      </Component>

      <!-- Desktop Shortcut (optional) -->
      <Component Id="DesktopShortcut" Directory="DesktopFolder" Guid="D2E3F4A5-B6C7-4D8E-9F0A-1B2C3D4E5F6A">
        <Shortcut Id="ApplicationDesktopShortcut"
                  Name="DIS Verification GenAI"
                  Description="Launch DIS Verification GenAI Web Interface"
                  Target="[System64Folder]cmd.exe"
                  Arguments='/k "cd /d &quot;[INSTALLFOLDER]&quot; &amp;&amp; docker compose up -d &amp;&amp; start http://localhost:8501"'
                  WorkingDirectory="INSTALLFOLDER" />
        <RemoveFolder Id="CleanUpDesktopShortCut" On="uninstall"/>
        <RegistryValue Root="HKCU"
                       Key="Software\[Manufacturer]\[ProductName]"
                       Name="desktop_shortcut"
                       Type="integer"
                       Value="1"
                       KeyPath="yes"/>
      </Component>
    </ComponentGroup>
  </Fragment>
</Wix>
