<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <?define ProductName = "DIS Verification GenAI" ?>
  <?define ProductShortName = "dis-verification-genai" ?>
  <?define ProductVersion = "VERSION_PLACEHOLDER" ?>
  <?define Manufacturer = "Your Organization" ?>
  <?define UpgradeCode = "34c3ed39-12a4-44d1-b571-74e406f9beb1" ?>

  <Product Id="*"
           Name="$(var.ProductName)"
           Language="1033"
           Version="$(var.ProductVersion)"
           Manufacturer="$(var.Manufacturer)"
           UpgradeCode="$(var.UpgradeCode)">

    <Package InstallerVersion="500"
             Compressed="yes"
             InstallScope="perMachine"
             Description="$(var.ProductName) Installer"
             Comments="AI-powered verification and test plan generation system"
             Manufacturer="$(var.Manufacturer)"
             Platform="x64" />

    <!-- Upgrade logic -->
    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />

    <MediaTemplate EmbedCab="yes" />

    <!-- Properties -->
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />
    <Property Id="ARPHELPLINK" Value="https://github.com/martinmanuel9/dis_verification_genai" />
    <Property Id="ARPURLINFOABOUT" Value="https://github.com/martinmanuel9/dis_verification_genai" />

    <!-- Add/Remove Programs Icon -->
    <!-- <Property Id="ARPPRODUCTICON" Value="AppIcon" /> -->
    <!-- <Icon Id="AppIcon" SourceFile="app-icon.ico" /> -->

    <!-- Feature definition -->
    <Feature Id="ProductFeature" Title="DIS Verification GenAI" Level="1">
      <ComponentGroupRef Id="ApplicationFiles" />
      <ComponentGroupRef Id="ShortcutComponents" />
    </Feature>

    <!-- Property to control whether to launch setup -->
    <Property Id="WIXUI_EXITDIALOGOPTIONALCHECKBOXTEXT" Value="Run first-time setup wizard now (recommended)" />
    <Property Id="WIXUI_EXITDIALOGOPTIONALCHECKBOX" Value="1" />

    <!-- Property for WixShellExec - will be set by custom action -->
    <Property Id="WixShellExecTarget" Value="[#run_post_install.cmd]" />

    <!-- Set the actual command with resolved paths -->
    <CustomAction Id="SetLaunchCommand"
                  Property="WixShellExecTarget"
                  Value="&quot;[INSTALLFOLDER]scripts\run-post-install.cmd&quot; &quot;[INSTALLFOLDER]&quot;"
                  Execute="immediate" />

    <!-- Custom action to launch setup wizard -->
    <CustomAction Id="LaunchSetupWizard"
                  BinaryKey="WixCA"
                  DllEntry="WixShellExec"
                  Execute="immediate"
                  Return="ignore"
                  Impersonate="yes" />

    <!-- Custom action to create .env file from user input -->
    <CustomAction Id="SetCreateEnvCommand"
                  Property="CreateEnvFile"
                  Value="&quot;[System64Folder]WindowsPowerShell\v1.0\powershell.exe&quot; -NoProfile -ExecutionPolicy Bypass -File &quot;[INSTALLFOLDER]scripts\create-env-from-input.ps1&quot; -InstallDir &quot;[INSTALLFOLDER]&quot; -EnvContent &quot;[ENV_FILE_CONTENT]&quot;"
                  Execute="immediate" />

    <CustomAction Id="CreateEnvFile"
                  Property="CreateEnvFile"
                  ExeCommand="[CreateEnvFile]"
                  Execute="deferred"
                  Return="ignore"
                  Impersonate="yes" />

    <InstallExecuteSequence>
      <!-- Create .env file during installation -->
      <Custom Action="SetCreateEnvCommand" Before="InstallFinalize">NOT Installed</Custom>
      <Custom Action="CreateEnvFile" Before="InstallFinalize">NOT Installed</Custom>

      <!-- Launch setup wizard after installation -->
      <Custom Action="SetLaunchCommand" Before="InstallFinalize">WIXUI_EXITDIALOGOPTIONALCHECKBOX = 1 and NOT Installed</Custom>
      <Custom Action="LaunchSetupWizard" After="InstallFinalize">WIXUI_EXITDIALOGOPTIONALCHECKBOX = 1 and NOT Installed</Custom>
    </InstallExecuteSequence>

    <!-- UI -->
    <UIRef Id="CustomInstallDir" />
    <UIRef Id="WixUI_ErrorProgressText" />

    <!-- License Agreement -->
    <WixVariable Id="WixUILicenseRtf" Value="LICENSE.rtf" />

  </Product>

  <!-- Directory structure -->
  <Fragment>
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFiles64Folder">
        <Directory Id="INSTALLFOLDER" Name="DIS Verification GenAI" />
      </Directory>
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="DIS Verification GenAI"/>
      </Directory>
      <Directory Id="DesktopFolder" Name="Desktop" />
    </Directory>
  </Fragment>

  <!-- Shortcut Components -->
  <Fragment>
    <ComponentGroup Id="ShortcutComponents">
      <!-- Start Menu Shortcut -->
      <Component Id="ApplicationShortcut" Directory="ApplicationProgramsFolder" Guid="C1D2E3F4-A5B6-4C7D-8E9F-0A1B2C3D4E5F">
        <Shortcut Id="ApplicationStartMenuShortcut"
                  Name="DIS Verification GenAI"
                  Description="Launch DIS Verification GenAI Web Interface"
                  Target="[System64Folder]WindowsPowerShell\v1.0\powershell.exe"
                  Arguments='-NoProfile -ExecutionPolicy Bypass -File &quot;[INSTALLFOLDER]scripts\launch-app.ps1&quot; -InstallDir &quot;[INSTALLFOLDER]&quot;'
                  WorkingDirectory="INSTALLFOLDER">
          <!-- Icon="AppIcon" IconIndex="0" (uncomment when app-icon.ico is added) -->
        </Shortcut>

        <Shortcut Id="ConfigurationShortcut"
                  Name="Configure Environment"
                  Description="Configure DIS Verification GenAI environment variables"
                  Target="[System64Folder]WindowsPowerShell\v1.0\powershell.exe"
                  Arguments='-NoProfile -ExecutionPolicy Bypass -File &quot;[INSTALLFOLDER]scripts\setup-env.ps1&quot; -InstallDir &quot;[INSTALLFOLDER]&quot;'
                  WorkingDirectory="INSTALLFOLDER" />

        <Shortcut Id="StopServiceShortcut"
                  Name="Stop Services"
                  Description="Stop DIS Verification GenAI services"
                  Target="[System64Folder]cmd.exe"
                  Arguments='/k "cd /d &quot;[INSTALLFOLDER]&quot; &amp;&amp; docker compose down"'
                  WorkingDirectory="INSTALLFOLDER" />

        <Shortcut Id="FirstTimeSetupShortcut"
                  Name="First-Time Setup"
                  Description="Run the first-time setup wizard"
                  Target="[System64Folder]WindowsPowerShell\v1.0\powershell.exe"
                  Arguments='-NoProfile -ExecutionPolicy Bypass -File &quot;[INSTALLFOLDER]scripts\post-install.ps1&quot; -InstallDir &quot;[INSTALLFOLDER]&quot;'
                  WorkingDirectory="INSTALLFOLDER" />

        <RemoveFolder Id="CleanUpShortCut" Directory="ApplicationProgramsFolder" On="uninstall"/>
        <RegistryValue Root="HKCU"
                       Key="Software\[Manufacturer]\[ProductName]"
                       Name="installed"
                       Type="integer"
                       Value="1"
                       KeyPath="yes"/>
      </Component>

      <!-- Desktop Shortcut (optional) -->
      <Component Id="DesktopShortcut" Directory="DesktopFolder" Guid="D2E3F4A5-B6C7-4D8E-9F0A-1B2C3D4E5F6A">
        <Shortcut Id="ApplicationDesktopShortcut"
                  Name="DIS Verification GenAI"
                  Description="Launch DIS Verification GenAI Web Interface"
                  Target="[System64Folder]WindowsPowerShell\v1.0\powershell.exe"
                  Arguments='-NoProfile -ExecutionPolicy Bypass -File &quot;[INSTALLFOLDER]scripts\launch-app.ps1&quot; -InstallDir &quot;[INSTALLFOLDER]&quot;'
                  WorkingDirectory="INSTALLFOLDER">
          <!-- Icon="AppIcon" IconIndex="0" (uncomment when app-icon.ico is added) -->
        </Shortcut>
        <RemoveFolder Id="CleanUpDesktopShortCut" On="uninstall"/>
        <RegistryValue Root="HKCU"
                       Key="Software\[Manufacturer]\[ProductName]"
                       Name="desktop_shortcut"
                       Type="integer"
                       Value="1"
                       KeyPath="yes"/>
      </Component>
    </ComponentGroup>
  </Fragment>
</Wix>
